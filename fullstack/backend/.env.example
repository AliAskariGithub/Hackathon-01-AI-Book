# Cohere API (https://dashboard.cohere.com/api-keys)
COHERE_API_KEY=your_cohere_api_key_here

# Qdrant Cloud (https://cloud.qdrant.io/)
QDRANT_URL=https://your-cluster-id.us-east4-0.gcp.cloud.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here

# Groq API (https://console.groq.com/keys) - Required for RAG Agent
GROQ_API_KEY=gsk_your_groq_api_key_here

# Target book URL (for citation URL transformation)
BOOK_BASE_URL=https://aliaskarigithub.github.io

# CORS - Allowed origins for API requests (comma-separated)
# Replace {username} with actual HF username for production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://aliaskarigithub.github.io

# Backend URL (for frontend configuration)
# Replace {username} with actual HF Space username
BACKEND_URL=https://huggingface.co/spaces/{username}/isaac-sim-chatbot-api

# Configuration
BATCH_SIZE=96
COLLECTION_NAME=book_embeddings

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Server configuration (for local development)
HOST=0.0.0.0
PORT=8002